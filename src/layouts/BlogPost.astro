---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    imageSource?: string;
    imageUrl?: string;
  };
}

const {
  content: {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    imageSource,
    imageUrl,
  },
} = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Navbar />
    <main>
      <section class="container">
        <hgroup>
          <h1>{title}</h1>
          <h2>{description}</h2>
        </hgroup>
        <figure>
          {
            heroImage && (
              <img
                width={1920}
                height={360}
                src={heroImage}
                alt="Imagen de portada"
              />
            )
          }
          <figcaption>
            Imagen de <a href={imageUrl} target="_blank">{imageSource}</a>
          </figcaption>
        </figure>
        <hr />
        <slot />
        <hr />
        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <div>
              Ultima actualizaci√≥n <time>{updatedDate}</time>
            </div>
          )
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
